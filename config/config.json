{
    "url_rewrite": true,
    "timezone": "Europe/Bucharest",
    "errors": {
        "display_errors": true,
        "message_type": "3",
        "mail_to": "",
        "repository": "temp/errors"
    },
    "sessions": {
        "use": true,
        "lifetime": "3600",
        "repository": "temp/sessions"
    },
    "sql":{
        "default": {
            "driver": "mysql",
            "host": "localhost",
            "database": "sc",
            "username": "root",
            "password": ""
        }
    },
    "defaults": {
        "module": "site",
        "controller": "index",
        "trigger": "index"
    }, 
   "modules": {
        "config_file": "config.json",
        "repository": "application/modules",
        "workspaces": [
            ""
        ],
        "models": {
            "repository": "Models"
        },
        "controllers": {
            "repository": "Controllers",
            "trigger_suffix": "Trigger"
        }
    },
    "views": {
        "repository": "application/views",
        "file_extension": "phtml"
    }
}